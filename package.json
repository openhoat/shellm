{
  "name": "shellm",
  "version": "1.0.0",
  "description": "Modern AI-powered terminal with Ollama integration",
  "main": "dist-electron/electron/main.js",
  "homepage": "https://github.com/openhoat/shellm",
  "scripts": {
    "clean": "rimraf -g -v dist dist-electron release **/tsconfig.tsbuildinfo",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json && node -e \"const fs=require('fs');const path=require('path');const src=path.join('electron','prompts');const dest=path.join('dist-electron','electron','prompts');if(fs.existsSync(src)){fs.mkdirSync(dest,{recursive:true});fs.readdirSync(src).forEach(f=>fs.copyFileSync(path.join(src,f),path.join(dest,f)))}\"",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "lint": "eslint src --ext .ts,.tsx",
    "qa": "biome check .",
    "qa:fix": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "validate": "concurrently \"npm run qa\" \"npm run build\" \"npm run test\"",
    "commit:lint": "commitlint --edit",
    "changelog": "node scripts/generate-changelog.js",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Olivier Penhoat <openhoat@gmail.com> (http://headwood.net/)",
  "license": "ISC",
  "volta": {
    "node": "22.22.0",
    "npm": "10.9.4"
  },
  "dependencies": {
    "@langchain/core": "1.1.20",
    "@langchain/ollama": "1.2.2",
    "axios": "1.13.4",
    "electron-store": "11.0.2",
    "i18next": "25.8.4",
    "i18next-browser-languagedetector": "8.2.0",
    "node-pty": "1.1.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-i18next": "16.5.4",
    "xterm": "5.3.0",
    "xterm-addon-fit": "0.8.0",
    "zod": "4.3.6",
    "zustand": "5.0.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "25.2.0",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.3",
    "concurrently": "8.2.2",
    "electron": "40.1.0",
    "electron-builder": "26.7.0",
    "fs-extra": "11.3.3",
    "happy-dom": "20.5.0",
    "husky": "9.1.7",
    "rimraf": "6.1.2",
    "tsc-alias": "1.8.16",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  },
  "build": {
    "appId": "com.openhoat.shellm",
    "productName": "SheLLM",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
